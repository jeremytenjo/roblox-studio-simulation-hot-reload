{
  "name": "reload-roblox-studio-simulator",
  "description": "VS Code extension for hot reloading Roblox Studio simulations and running tests",
  "keywords": [
    "roblox",
    "vscode",
    "extension",
    "reload",
    "hot-reload",
    "simulator",
    "testing"
  ],
  "version": "0.0.6",
  "publisher": "tenjojeremy",
  "license": "MIT",
  "icon": "assets/images/logo.png",
  "repository": {
    "url": "https://github.com/jeremytenjo/reload-roblox-studio-simulator"
  },
  "type": "module",
  "engines": {
    "vscode": "^1.107.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "reloadRobloxStudioSimulator.restart",
        "title": "Roblox Studio: Restart Simulator"
      }
    ],
    "keybindings": [
      {
        "command": "reloadRobloxStudioSimulator.restart",
        "key": "f2",
        "when": "true"
      }
    ],
    "configuration": {
      "title": "Roblox Studio Simulator",
      "properties": {
        "reloadRobloxStudioSimulator.disableAutoReload": {
          "type": "boolean",
          "default": false,
          "description": "Disable automatic reloading when files are saved"
        }
      }
    }
  },
  "scripts": {
    "dev": "tsc -watch -p ./",
    "build": "tsc -p ./",
    "deploy:patch": "npm version patch && npm run lint && npm run build && vsce publish",
    "deploy:minor": "npm version minor && npm run lint && npm run build && vsce publish",
    "deploy:major": "npm version major && npm run lint && npm run build && vsce publish",
    "test": "echo \"no tests\"",
    "prettify": "prettier --write .",
    "lint": "npm run tests:lint && npm run tests:ts-types",
    "tests:lint": "eslint .",
    "tests:ts-types": "tsgo --noEmit"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "1.107.0",
    "@types/ws": "8.18.1",
    "@typescript/native-preview": "7.0.0-dev.20251210.1",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "eslint": "9.39.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-require-js-extension": "0.0.5",
    "npm-run-all": "4.1.5",
    "prettier": "3.7.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1"
  },
  "dependencies": {
    "eslint-config-prettier": "10.1.8",
    "ws": "8.18.3"
  }
}
